
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome</h2>

<p>Add ?name=*name*&numtimes=*number*</p>

<ul>
    @{ 
        for (int i = 0; i < ViewBag.NumTimes; i++)
        {
            if (i % 2 == 0)
            {

                <li>@ViewBag.Message</li>
            }

            else
            {
                <li><strong>Even</strong> Row</li>
            }

        }
    }
</ul>
